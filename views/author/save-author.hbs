<div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">

    <div class="card">
      <div class="card-header bg-dark text-white">
        {{#if editMode}}Edicion{{else}}Creacion{{/if}} de Authores
      </div>
      <div class="card-body" style="background-color: #C7DBD2">

        <form method="POST" action="{{#if editMode}}/edit-author{{else}}/create-author{{/if}}">
          <div class="mb-3">
            <label for="name" class="form-label" >Nombre</label>
            <input required type="text" class="form-control" id="name" name="name" value="{{#if editMode}}{{author.name}}{{/if}}" />
          </div>       
           <div class="mb-3">
            <label for="email" class="form-label" >Correo</label>
            <input required type="email" class="form-control" id="email" name="email" value="{{#if editMode}}{{author.email}}{{/if}}" />
          </div>   

          {{#if editMode}}

          <input type="hidden" name="authorId" value="{{author.Id}}">
          
          {{/if}}

          <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
           <a href="/author" type="button" class="btn btn-warning">volver atras</a>
        </form>

      </div>
    </div>

  </div>
  <div class="col-md-6"></div>

</div>