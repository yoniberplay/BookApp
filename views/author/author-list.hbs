
  <div class="container" align="center">
<h2 class="mt-2 ml-5 d-inline-block align-bottom text-success" >Mantemiento de Author</h2>
 </div>
  <div class=" d-flex justify-content-center">
 <a href="/create-author" class="btn btn-primary btn-lg btn-block mt-2">
    <i class="fa-solid fa-plus"></i> Crear Author</a>
    </div>

{{#if hasAuthores}}
<table class="table">
  <thead class="th">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Correo</th>
      <th scope="col">Cant Libros</th>
       <th scope="col">Editar</th>
       <th scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>

       {{#each authores as |tip|}}
    <tr>
      <th scope="row">{{tip.Id}}</th>
      <td>{{tip.name}}</td>
      <td>{{tip.email}}</td>
      <td>{{tip.quantityBooks}}</td>
      <td colspan="2">

      <div class="row row-cols-2 ">
     <a  class="btn btn-success "href="/edit-author/{{tip.Id}}?edit=true"> 
         <i class="fa-solid fa-edit"></i>Editar</a>
     <form class="form-inline" action="/confirm-delete-author" method="post">
                <input type="hidden" name="authorId" value="{{tip.Id}}" />
                <button type="submit"  class="btn btn-danger">Eliminar</button>
              </form>
      </div>
      </td>
       
    </tr>
    
    {{/each}}

  </tbody>
</table>
{{else}}

<h3 class="text-center mt-4">No hay authores creados</h3>
      {{/if}}