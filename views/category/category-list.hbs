
  <div class="container" align="center">
<h2 class="mt-2 ml-5 d-inline-block align-bottom text-success" >Mantenimiento de Categorias</h2>
 </div>
  <div class=" d-flex justify-content-center">
 <a href="/create-category" class="btn btn-primary btn-lg btn-block mt-2">
    <i class="fa-solid fa-plus"></i> Crear Categoria</a>
    </div>

{{#if hasCategories}}
<table class="table">
  <thead class="th">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Cant Libros</th>
       <th scope="col">Editar</th>
       <th scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>

       {{#each categories as |tip|}}
    <tr>
      <th scope="row">{{tip.Id}}</th>
      <td>{{tip.name}}</td>
      <td>{{tip.description}}</td>
      <td>{{tip.quantityBooks}}</td>
      <td colspan="2">

      <div class="row row-cols-2 ">
     <a  class="btn btn-success "href="/edit-category/{{tip.Id}}?edit=true"> 
         <i class="fa-solid fa-edit"></i>Editar</a>
     <form class="form-inline" action="/confirm-delete-category" method="post">
                <input type="hidden" name="categoryId" value="{{tip.Id}}" />
                <button type="submit"  class="btn btn-danger">Eliminar</button>
              </form>
      </div>
      </td>
       
    </tr>
    
    {{/each}}

  </tbody>
</table>
{{else}}

<h3 class="text-center mt-4">No hay categorias creadas</h3>
      {{/if}}